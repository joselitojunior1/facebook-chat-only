{
  "manifest_version": 2,
  "name": "Facebook Chat Only",
  "description": "Hides facebook's distractions such as the timeline, leaving only the chat service.",
  "version": "0.0.2",
  "icons": {
    "128" : "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "background.png"
  ]
}
